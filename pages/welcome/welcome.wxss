page{
  background-color: #b3d4dc;
  height:100%;
}
.user-profile{
  width:200rpx;
  height:200rpx;
  margin-top: 160rpx
}
.container{
  display:flex;
  flex-direction: column;
  align-items: center;
}
.user-name{
  font-size: 32rpx;
  font-weight:bold;
}
.moto{
  font-size: 22rpx;
  font-weight:bold;
  line-height:80rpx;       /*让文本框中文字垂直居中*/
  color:#405f80;
}
.moto-container{
  border:1px solid #405f80;
  height:80rpx;
  width:200rpx; 
  border-radius: 5px;      /*让文本框带圆角*/
  text-align:center;       /*让文本框中文字水平居中*/
  margin-top: 400rpx;
}
.name{
  font-family: SimSun;
  font-size: 150rpx;
  font-weight:600;
  color:#405f80;
  margin-top: 200rpx;
}
.introduce{
    font-family: KaiTi;
  font-size: 40rpx;
  font-weight:200;
  color:#405f80;
  margin-top: 80rpx;
  margin-left: 250rpx;
}