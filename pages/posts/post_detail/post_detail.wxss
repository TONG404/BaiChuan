.container {
  display: flex;
  flex-direction: column;
}
.head-image{
  width:100%;
  height:460rpx;
}
.author-data{
  flex-direction: row;
  margin-left: 30rpx;
  margin-top: 20rpx;
}
.profile{
  height: 64rpx;
  width:64rpx;
  vertical-align: middle;
}
.author{
  font-size:30rpx;
  font-weight: 300;
  margin-left: 20rpx;
  vertical-align: middle;
  color:#666;
}
.const-text{
  font-size: 24rpx;
  color:#999;
  margin-left: 20rpx;
}
.date{
  font-size: 24rpx;
  color:#999;
  margin-left: 30rpx;
  vertical-align: middle;
}
.title{
  margin-left: 40rpx;
  font-size:36rpx;
