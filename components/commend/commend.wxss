/* component/commend.wxss */
.piece{
  display: flex;
  flex-direction: column;
  margin: 10px 15px 0 15px;
  background-color: #8fb8c251;
  border:1px solid#8fb8c2;
  border-radius: 20px;
}

.bottom{
  display: flex;
  flex-direction: row;
}
.author{
  display: flex;
  flex-direction: row;
  align-items: center;
  margin-left: 10px;
  margin-top: 5px;
}
.name{
  font-size: 18px;
  font-weight: bold;
  color:#8fb8c2;
  margin-right: 15px;
}
.time{
  font-size:15px;
  color:#666
}
.content{
  font-size: 15px;
  margin:5px 0 5px 10px;
}